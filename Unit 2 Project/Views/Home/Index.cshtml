@model List<Employee>
@{
    ViewData["Title"] = "Employees";
}

<h2>Employee List</h2>

<a asp-controller="Employee" asp-action="Add">Add New Employee</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Position</td>
                <td>@employee.Salary</td>
                <td>
                    <a asp-controller="Movie" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                    <a asp-controller="Movie" asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
