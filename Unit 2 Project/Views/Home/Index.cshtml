@model List<Employee>

<!-- Heading -->
<h2>Employee List</h2>

<!-- Table to display employees -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Position</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        <!-- Loop through the employees -->
        @foreach (var employee in Model)
        {
            <tr>
                <!-- Display employee details -->
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Position</td>
                <td>@employee.Salary</td>
            </tr>
        }
    </tbody>
</table>
